<%= form_for @user do |f| %>
  <%= render 'shared/error_messages' %>
  <%= f.text_field :name, placeholder: "Full Name" %>
  <%= f.text_field :email, placeholder: "Email" %>
  <%= f.text_field :phone_number, placeholder: "Phone Number" %>
  <%= f.password_field :password, placeholder: "Password" %>
  <%= f.password_field :password_confirmation, placeholder: "Re-type password" %>
  <%= f.text_area :description, rows:3, placeholder: "Your Self-description: e.g. US President" %>
  <%= f.submit "Save changes", class: "btn btn-primary" %>
<% end %>