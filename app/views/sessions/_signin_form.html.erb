<%= form_for :session, url: sessions_path do |f| %>
  <label><h3>Please sign in</h3></label>
  <br>
  <%= f.text_field :email, placeholder: "Email" %>
  <%= f.password_field :password, class: "input_small", placeholder: "Password" %>
  <label class="checkbox"><%= f.check_box :remember_me, { checked: true }, "yes", "no" %> Remember me</label>
  <%= f.submit "Sign in", class: "btn btn-primary signin-btn" %>
<% end %>